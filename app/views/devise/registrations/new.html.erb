<div class="wrapper-registration">

<div class="login-image">
  <%= image_tag("Opptis_Banner_Login_50.png") %>
  <h2>Registre-se</h2>
</div>

<div class="registration">

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name, required: true, autofocus: true, label: "Nome completo" %>
      <%= f.input :email, required: true, autofocus: true %>
      <%= f.input :password, required: true, label: "Senha", hint: ("MÃ­nimo de #{@minimum_password_length} caracteres" if @minimum_password_length) %>
      <%= f.input :password_confirmation, required: true, label: "Repita sua senha" %>
      <%= f.collection_radio_buttons :role, [["restaurant", "Restaurante"],["candidate", "Candidato"]], :first, :last, required: true, class: "radio-group" %>
    </div>

    <div class="form-actions">
    <%= f.button :submit, "Registre-se", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

</div>
