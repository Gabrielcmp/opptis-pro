<h2>Editar <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true, autofocus: true, label: "Nome completo" %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Esperando confirmação de: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :password, required: true, label: "Senha", hint: ("Mínimo de #{@minimum_password_length} caracteres" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true, label: "Repita sua senha" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Atualizar" %>
  </div>
<% end %>

<h3>Cancelar minha conta</h3>

<p>Não está satisfeito? <%= link_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Tem certeza?" }, method: :delete %></p>

<%= link_to "Voltar", :back %>
