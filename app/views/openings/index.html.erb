<p id="notice"><%= notice %></p>


    <% @openings.each do |opening| %>
    <div class="opening-container">
      <div class="openings-details">
        <h2><%= opening.title%></h2>
        <h3><%= opening.previous_experience %> </h3>
        <p><%= opening.pref_sex %></p>
        <p><%= opening.pref_age %></p>
        <h4> <%= link_to 'Detalhes da vaga', opening %> </h4>
      </div>
      <% if current_user.role == 'restaurant' %>
        <div class="opening-actions">
          <p><%= link_to 'Editar', edit_opening_path(opening) %></p>
          <p><%= link_to 'Remover', opening, method: :delete, data: { confirm: 'Tem certeza que quer remover a vaga?' } %></p>
        </div>
      <% end %>
    </div>
    <hr>

    <% end %>

    <div class="button-profile">
        <p><%= link_to 'Voltar para o Perfil', @restaurant%></p>
    </div>

<br>

    <div class="button-search">
      <%= link_to "Cadastrar Nova Vaga", new_opening_path, class:"btn btn-primary"%>
    </div>
